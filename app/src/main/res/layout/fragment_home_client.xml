<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingHorizontal="@dimen/_13sdp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_50sdp"
        android:gravity="center_vertical">

        <com.autohubtraining.autohub.customview.CustomTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="algtest."
            android:textColor="@color/colorBlack"
            android:textSize="@dimen/_24ssp"
            app:fontName="Montserrat_Bold"/>

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/iv_avatar"
            android:layout_width="@dimen/_25sdp"
            android:layout_height="@dimen/_25sdp"
            android:layout_alignParentRight="true"
            android:src="@drawable/ic_profile" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_30sdp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="@dimen/_16sdp"
            android:layout_height="@dimen/_16sdp"
            android:src="@drawable/compass"/>

        <com.autohubtraining.autohub.customview.CustomTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_8sdp"
            android:text="4th Avenue, Los Angeles"
            android:textColor="@color/colorBlack"
            android:textSize="@dimen/_10ssp"
            app:fontName="Montserrat_SemiBold"/>

        <com.autohubtraining.autohub.customview.CustomButton
            android:layout_width="wrap_content"
            android:layout_height="@dimen/_25sdp"
            android:layout_marginLeft="@dimen/_5sdp"
            android:text="change"
            android:textColor="@color/colorGreen"
            android:textSize="@dimen/_8ssp"
            android:background="@android:color/transparent"
            app:fontName="Montserrat_Bold"/>

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_290sdp"
        android:layout_marginTop="@dimen/_17sdp"
        android:background="@drawable/round_layout"
        android:backgroundTint="@color/colorPink2">

        <com.autohubtraining.autohub.customview.CustomTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_35sdp"
            android:layout_marginLeft="@dimen/_17sdp"
            android:text="@string/find_your_perfect_photographer"
            android:textColor="@color/colorBlack"
            android:textSize="@dimen/_30ssp"
            app:fontName="Montserrat_SemiBold"/>

        <com.autohubtraining.autohub.customview.CustomButton
            android:id="@+id/b_find"
            android:layout_width="@dimen/_196sdp"
            android:layout_height="@dimen/_40sdp"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="@dimen/_78sdp"
            android:text="FIND"
            android:textColor="@color/colorBlack"
            android:textSize="@dimen/_19ssp"
            android:background="@drawable/round_layout"
            app:fontName="Montserrat_Bold"/>

        <ImageView
            android:layout_width="@dimen/_90sdp"
            android:layout_height="@dimen/_90sdp"
            android:layout_alignParentRight="true"
            android:layout_marginTop="@dimen/_12sdp"
            android:layout_marginRight="@dimen/_4sdp"
            android:src="@drawable/magnifying_lens"/>

        <ImageView
            android:layout_width="@dimen/_62sdp"
            android:layout_height="@dimen/_62sdp"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="@dimen/_13sdp"
            android:layout_marginBottom="@dimen/_1sdp"
            android:src="@drawable/photographer"/>

        <ImageView
            android:layout_width="@dimen/_54sdp"
            android:layout_height="@dimen/_54sdp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="@dimen/_8sdp"
            android:layout_marginRight="@dimen/_68sdp"
            android:src="@drawable/camera_roll"/>

    </RelativeLayout>

    <com.autohubtraining.autohub.customview.CustomTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_32sdp"
        android:text="@string/shoot_for_every_occasion"
        android:textColor="@color/colorBlack"
        android:textSize="@dimen/_18ssp"
        app:fontName="Montserrat_Bold"/>

</LinearLayout>