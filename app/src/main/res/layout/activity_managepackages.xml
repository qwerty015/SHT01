<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_50sdp">

        <com.autohubtraining.autohub.customview.CustomTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/manage_pckages_dot"
            android:textColor="@color/colorBlack"
            android:textSize="@dimen/_16ssp"
            app:fontName="Montserrat_Bold"/>

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/iv_avatar"
            android:layout_width="@dimen/_25sdp"
            android:layout_height="@dimen/_25sdp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/_20sdp"
            android:src="@drawable/ic_profile" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="@dimen/_152sdp"
                    android:layout_height="@dimen/_30sdp"
                    android:layout_marginTop="@dimen/_20sdp"
                    android:background="@drawable/white_round_button"
                    android:backgroundTint="@color/colorOrange">

                    <com.autohubtraining.autohub.customview.CustomTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:text="@string/active_packages"
                        android:textColor="@color/colorWhite"
                        android:textSize="@dimen/_12ssp"
                        app:fontName="Montserrat_Medium"/>

                </RelativeLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/_18sdp"
                    android:layout_marginTop="@dimen/_18sdp"
                    android:orientation="vertical"
                    android:background="@drawable/round_border_thick">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_40sdp"
                        android:gravity="center_vertical">

                        <com.autohubtraining.autohub.customview.CustomTextView
                            android:id="@+id/tv_package_name1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:text="PACKAGE 1"
                            android:textColor="@color/colorBlack"
                            android:textSize="@dimen/_16ssp"
                            app:fontName="Montserrat_Medium"/>

                        <ImageView
                            android:layout_width="@dimen/_13sdp"
                            android:layout_height="@dimen/_13sdp"
                            android:layout_alignParentRight="true"
                            android:layout_marginRight="@dimen/_15sdp"
                            android:src="@drawable/edit"/>

                    </RelativeLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_1sdp"
                        android:background="@color/colorGray1"/>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_40sdp"
                        android:gravity="center_vertical">

                        <com.autohubtraining.autohub.customview.CustomTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/_7sdp"
                            android:text="@string/no_of_photographs"
                            android:textColor="@color/colorBlack"
                            android:textSize="@dimen/_11ssp"
                            app:fontName="Montserrat_Medium"/>

                        <com.autohubtraining.autohub.customview.CustomEditView
                            android:id="@+id/et_numphotographs1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_marginRight="@dimen/_30sdp"
                            android:text="0"
                            android:textColor="@color/colorBlack"
                            android:textSize="@dimen/_11ssp"
                            android:background="@null"
                            app:fontName="Montserrat_Medium" />

                    </RelativeLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_1sdp"
                        android:background="@color/colorGray1"/>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_40sdp"
                        android:gravity="center_vertical">

                        <com.autohubtraining.autohub.customview.CustomTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/_7sdp"
                            android:text="@string/editing_included"
                            android:textColor="@color/colorBlack"
                            android:textSize="@dimen/_11ssp"
                            android:textAllCaps="true"
                            app:fontName="Montserrat_Medium"/>

                        <com.autohubtraining.autohub.customview.CustomTextView
                            android:id="@+id/tv_editingincluded1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_marginRight="@dimen/_30sdp"
                            android:text="NO"
                            android:textSize="@dimen/_11ssp"
                            android:textColor="@color/colorBlack"
                            android:background="@null"
                            app:fontName="Montserrat_Medium" />

                    </RelativeLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_1sdp"
                        android:background="@color/colorGray1"/>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_40sdp"
                        android:gravity="center_vertical">

                        <com.autohubtraining.autohub.customview.CustomTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/_7sdp"
                            android:text="RATE"
                            android:textColor="@color/colorBlack"
                            android:textSize="@dimen/_11ssp"
                            app:fontName="Montserrat_Medium"/>

                        <com.autohubtraining.autohub.customview.CustomEditView
                            android:id="@+id/et_rate1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_marginRight="@dimen/_30sdp"
                            android:text="0"
                            android:textSize="@dimen/_11ssp"
                            android:textColor="@color/colorBlack"
                            android:background="@null"
                            app:fontName="Montserrat_Medium" />

                    </RelativeLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/_18sdp"
                    android:layout_marginTop="@dimen/_16sdp"
                    android:orientation="vertical"
                    android:background="@drawable/round_border_thick">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_40sdp"
                        android:gravity="center_vertical">

                        <com.autohubtraining.autohub.customview.CustomTextView
                            android:id="@+id/tv_package_name2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:text="PACKAGE 2"
                            android:textColor="@color/colorBlack"
                            android:textSize="@dimen/_16ssp"
                            app:fontName="Montserrat_Medium"/>

                        <ImageView
                            android:layout_width="@dimen/_13sdp"
                            android:layout_height="@dimen/_13sdp"
                            android:layout_alignParentRight="true"
                            android:layout_marginRight="@dimen/_15sdp"
                            android:src="@drawable/edit"/>

                    </RelativeLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_1sdp"
                        android:background="@color/colorGray1"/>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_40sdp"
                        android:gravity="center_vertical">

                        <com.autohubtraining.autohub.customview.CustomTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/_7sdp"
                            android:text="@string/no_of_photographs"
                            android:textColor="@color/colorBlack"
                            android:textSize="@dimen/_11ssp"
                            app:fontName="Montserrat_Medium"/>

                        <com.autohubtraining.autohub.customview.CustomEditView
                            android:id="@+id/et_numphotographs2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_marginRight="@dimen/_30sdp"
                            android:text="0"
                            android:textColor="@color/colorBlack"
                            android:textSize="@dimen/_11ssp"
                            android:background="@null"
                            app:fontName="Montserrat_Medium" />

                    </RelativeLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_1sdp"
                        android:background="@color/colorGray1"/>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_40sdp"
                        android:gravity="center_vertical">

                        <com.autohubtraining.autohub.customview.CustomTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/_7sdp"
                            android:text="@string/editing_included"
                            android:textColor="@color/colorBlack"
                            android:textSize="@dimen/_11ssp"
                            android:textAllCaps="true"
                            app:fontName="Montserrat_Medium"/>

                        <com.autohubtraining.autohub.customview.CustomTextView
                            android:id="@+id/tv_editingincluded2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_marginRight="@dimen/_30sdp"
                            android:text="NO"
                            android:textSize="@dimen/_11ssp"
                            android:textColor="@color/colorBlack"
                            android:background="@null"
                            app:fontName="Montserrat_Medium" />

                    </RelativeLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_1sdp"
                        android:background="@color/colorGray1"/>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_40sdp"
                        android:gravity="center_vertical">

                        <com.autohubtraining.autohub.customview.CustomTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/_7sdp"
                            android:text="RATE"
                            android:textColor="@color/colorBlack"
                            android:textSize="@dimen/_11ssp"
                            app:fontName="Montserrat_Medium"/>

                        <com.autohubtraining.autohub.customview.CustomEditView
                            android:id="@+id/et_rate2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_marginRight="@dimen/_30sdp"
                            android:text="0"
                            android:textSize="@dimen/_11ssp"
                            android:textColor="@color/colorBlack"
                            android:background="@null"
                            app:fontName="Montserrat_Medium" />

                    </RelativeLayout>

                </LinearLayout>

                <RelativeLayout
                    android:layout_width="@dimen/_152sdp"
                    android:layout_height="@dimen/_30sdp"
                    android:layout_marginTop="@dimen/_20sdp"
                    android:background="@drawable/white_round_button"
                    android:backgroundTint="@color/colorOrange">

                    <com.autohubtraining.autohub.customview.CustomTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:text="@string/your_offers"
                        android:textColor="@color/colorWhite"
                        android:textSize="@dimen/_12ssp"
                        app:fontName="Montserrat_Medium"/>

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="@dimen/_225sdp"
                    android:layout_height="@dimen/_40sdp"
                    android:layout_marginTop="@dimen/_30sdp"
                    android:layout_marginBottom="@dimen/_20sdp"
                    android:background="@drawable/white_roundcorner_button">

                    <ImageView
                        android:layout_width="@dimen/_40sdp"
                        android:layout_height="@dimen/_40sdp"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/_5sdp"
                        android:src="@drawable/ic_add_black_24dp"/>

                    <com.autohubtraining.autohub.customview.CustomTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:text="@string/new_offer"
                        android:textColor="@color/colorBlack"
                        android:textSize="@dimen/_16ssp"
                        app:fontName="Montserrat_Medium"/>

                </RelativeLayout>

            </LinearLayout>

        </ScrollView>

    </LinearLayout>

</LinearLayout>