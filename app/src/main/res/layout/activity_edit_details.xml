<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/b_savechanges"
        android:orientation="vertical">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <com.autohubtraining.autohub.customview.CustomTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="@dimen/_18sdp"
                    android:text="@string/profile"
                    android:textColor="@color/colorBlack"
                    android:textSize="@dimen/_17ssp"
                    app:fontName="Montserrat_SemiBold" />

                <com.autohubtraining.autohub.customview.CustomTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="@dimen/_17ssp"
                    android:text="@string/edit_details"
                    android:textColor="@color/colorBlack"
                    android:textSize="@dimen/_16ssp"
                    app:fontName="Montserrat_Regular"/>

                <RelativeLayout
                    android:layout_width="@dimen/_70sdp"
                    android:layout_height="@dimen/_70sdp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="@dimen/_21sdp">

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/iv_avatar"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        app:civ_border_color="@color/colorBlack"
                        app:civ_border_width="1dp"
                        android:src="@drawable/ic_profile" />

                    <RelativeLayout
                        android:layout_width="@dimen/_14sdp"
                        android:layout_height="@dimen/_14sdp"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentBottom="true"
                        android:layout_margin="@dimen/_3sdp">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@drawable/ellipse"/>

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:src="@drawable/edit" />

                    </RelativeLayout>

                </RelativeLayout>

                <com.autohubtraining.autohub.customview.CustomTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_13sdp"
                    android:layout_marginTop="@dimen/_30sdp"
                    android:text="@string/first_name"
                    android:textAllCaps="true"
                    android:textColor="@color/colorBlack"
                    android:textSize="@dimen/_13ssp"
                    app:fontName="Montserrat_SemiBold" />

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginHorizontal="@dimen/_13sdp"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:elevation="20dp"
                    android:focusableInTouchMode="true"
                    android:focusedByDefault="false"
                    card_view:cardCornerRadius="0dp">

                    <com.autohubtraining.autohub.customview.CustomEditView
                        android:id="@+id/et_firstname"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_40sdp"
                        android:background="@android:color/transparent"
                        android:hint="@string/first_name"
                        android:padding="@dimen/_10sdp"
                        android:textColor="@color/colorBlack"
                        android:textSize="@dimen/_12ssp" />

                </androidx.cardview.widget.CardView>

                <com.autohubtraining.autohub.customview.CustomTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_13sdp"
                    android:layout_marginTop="@dimen/_30sdp"
                    android:text="@string/last_name"
                    android:textAllCaps="true"
                    android:textColor="@color/colorBlack"
                    android:textSize="@dimen/_13ssp"
                    app:fontName="Montserrat_SemiBold" />

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginHorizontal="@dimen/_13sdp"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:elevation="20dp"
                    android:focusableInTouchMode="true"
                    android:focusedByDefault="false"
                    card_view:cardCornerRadius="0dp">

                    <com.autohubtraining.autohub.customview.CustomEditView
                        android:id="@+id/et_lastname"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_40sdp"
                        android:background="@android:color/transparent"
                        android:hint="@string/last_name"
                        android:padding="@dimen/_10sdp"
                        android:textColor="@color/colorBlack"
                        android:textSize="@dimen/_12ssp" />

                </androidx.cardview.widget.CardView>

                <com.autohubtraining.autohub.customview.CustomTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_13sdp"
                    android:layout_marginTop="@dimen/_30sdp"
                    android:text="@string/email"
                    android:textAllCaps="true"
                    android:textColor="@color/colorBlack"
                    android:textSize="@dimen/_13ssp"
                    app:fontName="Montserrat_SemiBold" />

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginHorizontal="@dimen/_13sdp"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:elevation="20dp"
                    android:focusableInTouchMode="true"
                    android:focusedByDefault="false"
                    card_view:cardCornerRadius="0dp">

                    <com.autohubtraining.autohub.customview.CustomEditView
                        android:id="@+id/et_email"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_40sdp"
                        android:background="@android:color/transparent"
                        android:hint="@string/email"
                        android:padding="@dimen/_10sdp"
                        android:textColor="@color/colorBlack"
                        android:textSize="@dimen/_12ssp"
                        android:inputType="textEmailAddress"/>

                </androidx.cardview.widget.CardView>

                <com.autohubtraining.autohub.customview.CustomTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_13sdp"
                    android:layout_marginTop="@dimen/_30sdp"
                    android:text="@string/password"
                    android:textAllCaps="true"
                    android:textColor="@color/colorBlack"
                    android:textSize="@dimen/_13ssp"
                    app:fontName="Montserrat_SemiBold" />

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginHorizontal="@dimen/_13sdp"
                    android:layout_marginVertical="@dimen/_10sdp"
                    android:elevation="20dp"
                    android:focusableInTouchMode="true"
                    android:focusedByDefault="false"
                    card_view:cardCornerRadius="0dp">

                    <com.autohubtraining.autohub.customview.CustomEditView
                        android:id="@+id/et_password"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_40sdp"
                        android:background="@android:color/transparent"
                        android:hint="You can only set new password here."
                        android:padding="@dimen/_10sdp"
                        android:textColor="@color/colorBlack"
                        android:textSize="@dimen/_12ssp"
                        android:inputType="textPassword"/>

                    <com.autohubtraining.autohub.customview.CustomTextView
                        android:id="@+id/tv_visiblepassword"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical|right"
                        android:layout_marginRight="@dimen/_9sdp"
                        android:text="SHOW"
                        android:textSize="@dimen/_12ssp"
                        android:textColor="@color/colorBlack"
                        app:fontName="Montserrat_SemiBold"/>

                </androidx.cardview.widget.CardView>

            </LinearLayout>
        </ScrollView>
    </LinearLayout>

    <com.autohubtraining.autohub.customview.CustomButton
        android:id="@+id/b_savechanges"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_50sdp"
        android:layout_alignParentBottom="true"
        android:layout_marginVertical="@dimen/_23sdp"
        android:layout_marginHorizontal="@dimen/_50sdp"
        android:text="@string/save_changes"
        android:textColor="@color/colorWhite"
        android:textSize="@dimen/_18ssp"
        android:background="@drawable/black_roundcorner_button"
        app:fontName="Montserrat_SemiBold"/>
</RelativeLayout>