<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="@dimen/_10sdp"
    tools:context=".signup_last.SignupLastActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <com.autohubtraining.autohub.customview.CustomTextView
            android:id="@+id/title"
            style="@style/semiBold17TVBlack"
            android:text="@string/shoot" />

        <com.autohubtraining.autohub.customview.CustomTextView
            android:id="@+id/subTitle"
            style="@style/semiBold17TVBlack"
            android:layout_below="@id/title"
            android:layout_marginTop="@dimen/_12sdp"
            android:text="@string/sign_up_dot" />

        <ProgressBar
            android:id="@+id/activeProgress"
            style="@style/appProgressBar"
            android:progress="100" />

        <com.autohubtraining.autohub.customview.CustomTextView
            android:id="@+id/your_name_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/activeProgress"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/margin10"
            android:padding="@dimen/_5sdp"
            android:text="@string/sign_up_last_info"
            android:textColor="#ff000000"
            android:textSize="@dimen/_13ssp"
            android:textStyle="bold"
            app:fontName="Montserrat_SemiBold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/black_button"
            android:padding="@dimen/_5sdp"
            android:text="@string/average_rate_rs_100_15_shots"
            android:textColor="@color/colorWhite"
            android:textSize="@dimen/_6ssp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_10sdp"
            android:orientation="vertical">

            <Spinner
                android:layout_width="wrap_content"
                android:layout_height="@dimen/_21sdp">

            </Spinner>

            <Spinner
                android:layout_width="wrap_content"
                android:layout_height="@dimen/_21sdp"
                android:layout_marginTop="@dimen/_10sdp">

            </Spinner>


        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_10sdp"
            android:padding="@dimen/_5sdp"
            android:text="@string/mention_other_gear_one_equipment_per_field_optional"
            android:textColor="#ff000000"
            android:textSize="@dimen/_14ssp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin20"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <com.autohubtraining.autohub.customview.CustomEditView
                android:id="@+id/edt_eg_tripod"
                android:layout_width="@dimen/_235sdp"
                android:layout_height="@dimen/_30sdp"
                android:background="@mipmap/rectangle_edt_background"
                android:hint="@string/e_g_tripod"
                android:padding="@dimen/_5sdp"
                android:textSize="@dimen/_13ssp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin10"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:weightSum="2">

                <com.autohubtraining.autohub.customview.CustomEditView
                    android:id="@+id/edt_eg_model"
                    android:layout_width="@dimen/_235sdp"
                    android:layout_height="@dimen/_30sdp"
                    android:background="@mipmap/rectangle_edt_background"
                    android:hint="@string/e_g_50_mm_nikkor_prime_lens"
                    android:padding="@dimen/_5sdp"
                    android:textSize="@dimen/_13ssp" />

                <ImageView
                    android:layout_width="@dimen/_30sdp"
                    android:layout_height="@dimen/_30sdp"
                    android:background="@drawable/ic_add_black_24dp"
                    android:layout_marginLeft="@dimen/_5sdp"
                    />


            </LinearLayout>


        </LinearLayout>


    </LinearLayout>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="@dimen/_10sdp"
        android:background="@drawable/black_button"
        android:hint="@string/next"
        android:textColorHint="@color/colorWhite"
        android:textSize="@dimen/_15ssp" />
</RelativeLayout>