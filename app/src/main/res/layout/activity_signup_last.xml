<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".signup_last.SignupLastActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:padding="@dimen/_10sdp">


            <com.autohubtraining.autohub.customview.CustomTextView
                android:id="@+id/title"
                style="@style/semiBold17TVBlack"
                android:text="@string/shoot" />

            <com.autohubtraining.autohub.customview.CustomTextView
                android:id="@+id/subTitle"
                style="@style/semiBold17TVBlack"
                android:layout_below="@id/title"
                android:layout_marginTop="@dimen/_12sdp"
                android:text="@string/sign_up_dot" />

            <ProgressBar
                android:id="@+id/activeProgress"
                style="@style/appProgressBar"
                android:progress="100" />

            <com.autohubtraining.autohub.customview.CustomTextView
                android:id="@+id/your_name_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/activeProgress"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/margin10"
                android:padding="@dimen/_5sdp"
                android:text="@string/sign_up_last_info"
                android:textColor="#ff000000"
                android:textSize="@dimen/_13ssp"
                android:textStyle="bold"
                app:fontName="Montserrat_SemiBold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/black_button"
                android:padding="@dimen/_5sdp"
                android:text="@string/average_rate_rs_100_15_shots"
                android:textColor="@color/colorWhite"
                android:textSize="@dimen/_6ssp" />

            <LinearLayout
                android:id="@+id/container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                android:background="@drawable/black_border"
                android:orientation="vertical">

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_35sdp"
                    android:layout_marginLeft="@dimen/_5sdp"
                    android:layout_marginRight="@dimen/_12sdp"
                    android:background="@null"
                    android:drawableRight="@drawable/edit"
                    android:hint="@string/set_plan_name"
                    android:padding="@dimen/_5sdp"
                    android:textColorHint="#ff000000"
                    android:textSize="@dimen/_9ssp" />


                <include layout="@layout/dummy_border" />


                <Spinner
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_35sdp"
                    android:layout_marginTop="@dimen/_5sdp" />

                <include layout="@layout/dummy_border" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/rs"
                        android:textColor="@color/colorBlack"
                        android:textSize="@dimen/_9ssp" />

                    <EditText
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:ems="5"
                        android:inputType="number"
                        android:singleLine="true"
                        android:textSize="@dimen/_9ssp"  />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:text="@string/no_of_pictures"
                        android:textColor="#ff000000"
                        android:textSize="@dimen/_9ssp" />

                    <EditText
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:ems="5"
                        android:inputType="number"
                        android:singleLine="true"
                        android:textSize="@dimen/_9ssp"  />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_35sdp"
                    android:layout_marginLeft="@dimen/_5sdp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:padding="@dimen/_5sdp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/editing_included"
                        android:textColor="#ff000000"
                        android:textSize="@dimen/_9ssp"  />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/margin20"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/yes"
                            android:textSize="@dimen/_7ssp"
                            android:textColor="#ff000000" />

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/margin10"
                            android:background="@mipmap/icons8_toggle_off" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/margin10"
                            android:textSize="@dimen/_7ssp"
                            android:text="@string/no"
                            android:textColor="#ff000000" />

                    </LinearLayout>


                </LinearLayout>


            </LinearLayout>

            <LinearLayout
                android:id="@+id/container_lower"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                android:background="@drawable/black_border"
                android:orientation="vertical">

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_35sdp"
                    android:layout_marginLeft="@dimen/_5sdp"
                    android:layout_marginRight="@dimen/_12sdp"
                    android:background="@null"
                    android:drawableRight="@drawable/edit"
                    android:hint="SET PLAN NAME"
                    android:padding="@dimen/_5sdp"
                    android:textColorHint="#ff000000"
                    android:textSize="@dimen/_9ssp" />

                <include layout="@layout/dummy_border" />

                <Spinner
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_35sdp"
                    android:layout_marginTop="@dimen/_5sdp" />


                <include layout="@layout/dummy_border" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/_9ssp"
                        android:text="@string/rs"
                        android:textColor="#ff000000"
                        />

                    <EditText
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:ems="5"
                        android:inputType="number"
                        android:singleLine="true"
                        android:textSize="@dimen/_9ssp"  />

                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_35sdp"
                    android:layout_marginLeft="@dimen/_5sdp"
                    android:orientation="horizontal"
                    android:padding="@dimen/_5sdp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/editing_included"
                        android:textColor="#ff000000"
                        android:textSize="@dimen/_9ssp"  />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/margin20"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/_7ssp"
                            android:text="@string/yes"
                            android:textColor="#ff000000" />

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/margin10"
                            android:background="@mipmap/icons8_toggle_off" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/_7ssp"
                            android:layout_marginLeft="@dimen/margin10"
                            android:text="@string/no"
                            android:textColor="#ff000000" />

                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>


            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                android:background="@drawable/black_button"
                android:hint="@string/next"
                android:textColorHint="@color/colorWhite"
                android:textSize="@dimen/_15ssp" />
        </LinearLayout>

    </ScrollView>
</LinearLayout>