<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".scene.deshboard.DeshboardActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/_148sdp"
            android:background="@drawable/profile_top_back"
            android:orientation="vertical">

            <com.autohubtraining.autohub.customview.CustomTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_17sdp"
                android:gravity="center"
                android:text="@string/profile"
                android:textColor="@color/colorWhite"
                android:textSize="@dimen/_19sdp"
                android:textStyle="bold"
                app:fontName="Montserrat_SemiBold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_30sdp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/ivPic"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:layout_marginLeft="@dimen/_22sdp"
                        android:src="@mipmap/profile_image_icon" />


                </RelativeLayout>

                <com.autohubtraining.autohub.customview.CustomTextView
                    android:id="@+id/tvUserFirstName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_22sdp"
                    android:text=""
                    android:textColor="@color/colorWhite"
                    android:textSize="@dimen/_25sdp"
                    android:textStyle="bold"
                    app:fontName="Montserrat_SemiBold" />


            </LinearLayout>

        </LinearLayout>

        <com.autohubtraining.autohub.customview.CustomTextView
            android:id="@+id/ivEditProfile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="@dimen/_13sdp"
            android:text="@string/edit_profile"
            android:textColor="@color/colorBlack"
            android:textSize="@dimen/_17ssp"
            app:fontName="Montserrat_SemiBold" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/_1sdp"
            android:background="@color/colorBlack">


        </View>

        <com.autohubtraining.autohub.customview.CustomTextView
            android:id="@+id/ivEditDetails"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="@dimen/_13sdp"
            android:text="@string/edit_your_details"
            android:textColor="@color/colorBlack"
            android:textSize="@dimen/_17ssp"
            app:fontName="Montserrat_SemiBold" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/_1sdp"
            android:background="@color/colorBlack">


        </View>

        <com.autohubtraining.autohub.customview.CustomTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="@dimen/_13sdp"
            android:text="@string/create_offers"
            android:textColor="@color/colorBlack"
            android:textSize="@dimen/_17ssp"
            app:fontName="Montserrat_SemiBold" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/_1sdp"
            android:background="@color/colorBlack"></View>


    </LinearLayout>

    <LinearLayout
        android:id="@+id/llLogout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/bottom_layout"
        android:layout_centerInParent="true"
        android:layout_marginBottom="@dimen/_35sdp"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="@dimen/_5sdp">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_logout" />

        <com.autohubtraining.autohub.customview.CustomTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_5sdp"
            android:text="@string/logout"
            android:textColor="@color/colorBlack"
            android:textSize="@dimen/_10sdp"
            app:fontName="Montserrat_SemiBold" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/bottom_layout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_51sdp"
        android:layout_alignParentBottom="true"
        android:visibility="invisible"
        android:weightSum="3">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/profile_home_icon" />

            <com.autohubtraining.autohub.customview.CustomTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_7ssp"
                android:text="HOME"
                android:textColor="@color/colorBlack"
                android:textSize="@dimen/_7ssp"
                app:fontName="Montserrat_SemiBold" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/profile_bottom_center_icon" />

            <com.autohubtraining.autohub.customview.CustomTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_7ssp"
                android:text="EXPLORE"
                android:textColor="@color/colorBlack"
                android:textSize="@dimen/_7ssp"
                app:fontName="Montserrat_SemiBold" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/profile_bottom_right_icon" />

            <com.autohubtraining.autohub.customview.CustomTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_7ssp"
                android:text="BOOKING"
                android:textColor="@color/colorBlack"
                android:textSize="@dimen/_7ssp"
                app:fontName="Montserrat_SemiBold" />


        </LinearLayout>


    </LinearLayout>

</RelativeLayout>